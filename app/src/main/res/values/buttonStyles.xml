<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Styling for special buttons -->
    <style name="specials">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:backgroundTint">@color/teal_200</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="ac">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <!-- Styling for numerical buttons -->
    <style name="numbers">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:backgroundTint">@color/purple_200</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <!-- Styling for operator buttons -->
    <style name="operators">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:backgroundTint">@color/purple_500</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

</resources>