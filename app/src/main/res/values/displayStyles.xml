<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Styling for sum (top) display -->
    <style name="sum_display">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
        <item name="android:textSize">@dimen/text_sum_display</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <!-- Styling for answer (bottom/main) display -->
    <style name="answer_display">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
        <item name="android:textSize">@dimen/text_answer_display</item>
        <item name="android:gravity">center_vertical|end</item>
    </style>

</resources>